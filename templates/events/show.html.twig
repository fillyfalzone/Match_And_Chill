{% extends 'base.html.twig' %}

{% block title %}Détails d'un évènement{% endblock %}
{% block meta_description %}
    détails d'un évènement
{% endblock %}

{% block body %}
{# ----------------- Section Center Start ---------------  #}

<div id="section-center" class="section-center">
    {#  ------------------- file d'ariane ------------ #}
    <div class="file-ariane mb-3">
        <a class="home-ariane" href="{{ path('app_home') }}">
            <iconify-icon class="icon" icon="ion:home-sharp" width="13" height="13"></iconify-icon>
            <span>Match&amp;Chill <span class="slash">/</span></span>
        </a>
        <a class="second-ariane" href="{{path("app_events")}}">évènéments <span class="slash">/</span></a>
        <span>Détails d'un évènement</span>
    </div>

    {# ----------- Afficher un évènement --------------------------------- #}
    
    <div class="container my-5">
        <div class="card">
            <div class="card-body">
                <div class="mb-3">
                    <div class="d-flex gap-2 flex-column" >
                        <img src=" {{asset('uploads/avatars/'~ app.user.avatar)}} " class="rounded-circle me-2" alt="Avatar" style="width: 60px; height: 60px;">
                        <p>{{app.user.pseudo}}</p>
                    </div>
                </div>
                <h1 class="card-title text-center  mb-3"> {{event.name}}</h1>
                <div class="row text-center">
                    <p class="card-text"><strong>Date de création :</strong> {{event.creationDate |date("m/d/Y H:i")}} </p>

                    <p class="card-text">
                        <strong>Statut :</strong> 
                        {% if availablePlaces %}
                            <span class="badge bg-success">
                            Ouvert &nbsp;   
                            {{ event.usersParticipate |length }} / {{event.numberOfPlaces}}</span>
                        {% else %}
                            <span class="badge bg-danger">
                                complet &nbsp;
                                {{ event.usersParticipate |length }} / {{event.numberOfPlaces}}</span>
                        {% endif %}
                    </p>

                    <p class="card-text"><strong>Match :</strong> {{ match.team1.shortName }} Vs  {{ match.team2.shortName }}</p>
                    <p class="card-text"><strong>Catégorie :</strong> {{event.category.name}} </p>
                    <p class="card-text"><strong>Description :</strong> {{event.description}} </p>
                    <p class="card-text"><strong>début :</strong> {{event.startDate |date("m/d/Y H:i:")}}</p>
                    <p class="card-text"><strong>fin :</strong> {{event.endDate |date("m/d/Y H:i:")}}</p>
               
                    <p class="card-text"><strong>Adresse :</strong> {{event.adress}}</p>
                    <p class="card-text"><strong>Ville :</strong>{{event.city}} <strong>Code postal :</strong> {{event.zipCode}}</p>
                    <p class="card-text"><strong>Pays :</strong>{{event.country}}</p>
                </div>
                {# ---------- Bouton supprimer modifier ------------- #}
               {% if event.user or is_granted('ROLE_ADMIN') %}
                    <div class="d-flex justify-content-center my-3">
                        <a href="{{ path('app_events_edit', {'id': event.id}) }}" class="btn btn-primary me-2">Modifier</a>
                        <a href="{{path('app_events_delete', {'id': event.id}) }}" class="btn btn-danger">Supprimer</a>
                    </div>
                    <div class="map-placeholder mb-3" style="height: 200px; background-color: #e9ecef;"></div>
                {% endif %}
                
                {# -------------Bouton Participer Annuler ---------  #}

                {# ----- S'il reste des places disponible et si user n'est pas inscrit #}
                {% if availablePlaces and not participate %}
                    <div class="col text-center">
                        <a href="{{ path('app_events_participate', {"id": event.id}) }}" class="btn btn-success d-inline-block mx-auto btn-lg">Participer à l'évènement</a>
                    </div>
                {% elseif participate %}
                    <div class="col text-center">
                        <a href="{{ path('app_events_unparticipate', {"id": event.id}) }}" class="btn btn-danger d-inline-block mx-auto btn-lg">Se désinscrire de l'évènement</a>
                    </div>
                {% else %}
                    <div class="col text-center">
                        <p class="text-danger fw-bold">
                            Peut-être afficher un message indiquant qu'il n'y a pas de places disponibles ou que l'événement est complet
                        </p>
                    </div>
                {% endif %}



          
               
            </div>
        </div>
    </div>
</div>

{% endblock %}