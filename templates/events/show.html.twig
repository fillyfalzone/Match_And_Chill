{% extends 'base.html.twig' %}

{% block title %}Créer un évènement{% endblock %}

{% block body %}
{# ----------------- Section Center Start ---------------  #}

<div id="section-center" class="section-center">
    {#  ------------------- file d'ariane ------------ #}
    <div class="file-ariane mb-3">
        <a class="home-ariane" href="{{ path('app_home') }}">
            <iconify-icon class="icon" icon="ion:home-sharp" width="13" height="13"></iconify-icon>
            <span>Match&amp;Chill <span class="slash">/</span></span>
        </a>
        <a class="second-ariane" href="">évènéments <span class="slash">/</span></a>
        <a class="second-ariane" href="">créer une évènement <span class="slash">/</span></a>
    </div>

    {# ----------- Afficher un évènement --------------------------------- #}
    
    <div class="container my-5">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <img src="path_to_avatar_placeholder" class="rounded-circle me-2" alt="Avatar" style="width: 60px; height: 60px;">
                    <h5 class="card-title mb-0">Event.Name</h5>
                </div>
                <p class="card-text"><strong>Date de création :</strong> mer 12 sept 2023</p>
                <p class="card-text"><strong>Statut :</strong> Ouvert <span class="badge bg-success">12/20 places disponibles</span></p>
                <p class="card-text"><strong>Date et Heure :</strong> 12-02-2024 à 19:30</p>
                <p class="card-text"><strong>Match :</strong> Team1 Vs Team2</p>
                <p class="card-text"><strong>Catégorie :</strong> Catégorie de l'événement</p>
                <p class="card-text"><strong>Description :</strong> Description de l'événement</p>
                <p class="card-text"><strong>Date de début :</strong> Date de début de l'événement</p>
                <p class="card-text"><strong>Heure :</strong> Heure de début</p>
                <p class="card-text"><strong>Adresse :</strong> Adresse de l'événement</p>
                <p class="card-text"><strong>Ville :</strong> Ville <strong>Code postal :</strong> Code postal</p>
                <div class="map-placeholder mb-3" style="height: 200px; background-color: #e9ecef;"></div>
                <div class="d-flex justify-content-end">
                    <button class="btn btn-primary me-2">Modifier</button>
                    <button class="btn btn-danger">Supprimer</button>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}