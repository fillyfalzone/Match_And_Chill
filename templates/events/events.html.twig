{% extends 'base.html.twig' %}

{% block title %}Liste des Matchs{% endblock %}
{% block meta_description %}
    Liste des évènement
{% endblock %}

{% block body %}
{# ----------------- Section Center Start ---------------  #}

<div id="section-center" class="section-center">
    {#  ------------------- file d'ariane ------------ #}
    <div class="file-ariane mb-3">
        <a class="home-ariane" href="{{ path('app_home') }}">
            <iconify-icon class="icon" icon="ion:home-sharp" width="13" height="13"></iconify-icon>
            <span>Match&amp;Chill <span class="slash">/</span></span>
        </a>
        <a class="second-ariane" href="">évènéments <span class="slash">/</span></a>
    </div>
    

    {# -------------- List of event ------------------------- #}

    <div class="container py-5">
        <h1 class="title-event text-center mb-4">LISTE DES ÉVÉNEMENTS</h1>
        {# ---------------------Créer un evenement ---------------  #}
        <div class="col">
            <a href=" {{path("app_events_new")}} " class="add-event">Créer un évènement</a>
        </div>
        <div class="d-flex justify-content-between gap-2 flex-wrap mb-4">
            <select class="form-select" style="width: 32%;">
                <option selected>Trier par date</option>
                <!-- Options -->
            </select>
            <select class="form-select" style="width: 32%;">
                <option selected>Trier par statut</option>
                <!-- Options -->
            </select>
            <select class="form-select" style="width: 32%;">
                <option selected>Trier par équipe</option>
                <!-- Options -->
            </select>
        </div>
    
        <!-- Début d'un événement -->
        <div class="card-event mb-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <!-- Placeholder pour l'avatar -->
                        <img src="https://via.placeholder.com/50" alt="avatar" class="rounded-circle mb-2">
                        <p class="text-center mb-0">userName</p>
                    </div>
                    <div class="card-detail col">
                        <h5 class="card-title fs-6">EventName</h5>
                        <p class="card-text small mb-1">Ajouté le 11-02-2024 à 12:23</p>
                        <p class="card-text small mb-1">Statut : ouvert</p>
                        <p class="card-text small mb-1">Disponibilité : 12/25 places</p>
                      
                    </div>
                </div>
            </div>
        </div>
        <div class="card-event mb-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <!-- Placeholder pour l'avatar -->
                        <img src="https://via.placeholder.com/50" alt="avatar" class="rounded-circle mb-2">
                        <p class="text-center mb-0">userName</p>
                    </div>
                    <div class="col">
                        <h5 class="card-title fs-6">EventName</h5>
                        <p class="card-text small mb-1">Ajouté le 11-02-2024 à 12:23</p>
                        <p class="card-text small mb-1">Statut : ouvert</p>
                        <p class="card-text small mb-1">Disponibilité : 12/25 places</p>
                      
                    </div>
                </div>
            </div>
        </div>
        <!-- Fin d'un événement -->

        {# ---------------------Créer un evenement ---------------  #}
        <div class="col">
            <a href=" {{path("app_events_new")}} " class="add-event">Créer un évènement</a>
        </div>
    
        <!-- Répétez le bloc ci-dessus pour chaque événement... -->
    
    </div>
</div>

{% endblock %}
