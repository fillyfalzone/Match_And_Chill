{% extends 'base.html.twig' %}

{% block title %}Liste des Matchs{% endblock %}

{% block meta_description %}
    Bienvenue sur la page de liste des matchs
{% endblock %}

{% block body %}
{# ----------------- Section Center Start ---------------  #}
<div id="section-center">

    {#  ------------------- file d'ariane ------------ #}
    <div class="file-ariane mb-3">
        <a class="home-ariane" href="{{ path('app_home') }}">
            <iconify-icon class="icon" icon="ion:home-sharp" width="13" height="13"></iconify-icon>
            <span>Match&amp;Chill <span class="slash">/</span></span>
        </a>
        <a class="second-ariane" href="">Matchs <span class="slash">/</span></a>
        <p id="here-ariane" class="here-ariane m-0">Aujourd'hui</p>
    </div>

    {# ---------------------- Filter ----------------------------  #}
    <div class="filter-select mb-3">
        <div class="filter-block">
            <div class="date-container">
                <select id="filter-date" class="filter-date ms-5 form-select form-select-sm" aria-label="Small select example">
                <!-- Ici sera déversé dynamiquement le calendrier des matchs-->
                </select>
            </div>
        </div>
    </div>
    {# ------------------------------ Message flash ------------------- #}
    {% for flashMessage in app.flashes('success') %}
        <div class="alert alert-success">{{ flashMessage }}</div>
    {% endfor %}
    {% for flashMessage in app.flashes('error') %}
        <div class="alert alert-danger">{{ flashMessage }}</div>
    {% endfor %}
    {% for flashMessage in app.flashes('warning') %}
        <div class="alert alert-warning">{{ flashMessage }}</div>
    {% endfor %}
    {% for flashMessage in app.flashes('info') %}
        <div class="alert alert-info">{{ flashMessage }}</div>
    {% endfor %}
        
    {# --------------- Single title ------------------------------ #}
    <h1 class="title-event text-center mb-4" style="color: #161b35 !important; background-color:white; border: 1px solid #161b35">liste des matchs</h1>
    {# ----------- TABLEAU DE COMPÉTITIONS ET MATCHS  -----------------------#}

    <article class="championship-card">
        <table class="championship-table table table-striped table-hover mb-0">
            <thead>
                <tr>
                    <th class="p-0 championship-head" scope="col" colspan="2">
                        <a href="#championship" class="championship">
                            <iconify-icon icon="ic:round-flag" style="color: #c5c5c5;" width="25" height="25"></iconify-icon>
                            <span class="championship-name">championship</span>
                        </a>
                        <a href="#classement">
                            <iconify-icon icon="material-symbols-light:data-table" style="color: #f0f0f0;" width="25" height="25"></iconify-icon>
                        </a>
                    </th>
                </tr>
            </thead>
            <!-- Container pour afficher les détails des matchs -->
            <tbody id="matchs-container">
                
            </tbody>
        </table>
    </article>
</div>
{# ------------------ Section Center End ---------------  #}

{% endblock %}
