{% extends 'base.html.twig' %}

{% block title %}Nous contacter{% endblock %}

{% block meta_description %}Le service contact de Match&amp;Chill est disponible pour répondre à vos questions{% endblock %}

{% block body %}
<div class="container col-8 py-3 text-center">
    <div class="row py-2">
        <h1 class="title-event">CONTACTEZ-NOUS</h1>
    </div>
    {{ form_start(form, {'attr': {'id': 'contact-form', 'class': 'my-2'}}) }}
        <div class="row">
            <div class="mb-3 col-sm-6">
                {{ form_row(form.pseudo) }}
            </div>
            <div class="mb-3 col-sm-6">
                {{ form_row(form.email) }}
            </div>

            <div class="mb-3">
                {{ form_row(form.message) }}
            </div>
        </div>
        <div class="row">
            <div class="my-3 d-flex gap-2 flex-wrap">
                {{ form_row(form.confirmation) }}  
                <p class="d-inline-block ms-2 fs-6">
                    Je confirme que j'ai lu et accepté les <a href="{{ path('app_conditions') }}" class="text-primary">conditions d'utilisation</a>.
                </p>           
            </div>
        </div>
        <div class="mb-3 row">
            <button class="btn btn-danger col-2 d-block mx-auto" type='submit'>Envoyer</button>
        </div>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
    {{ form_end(form) }}
</div>
{% endblock %}
